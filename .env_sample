# Camera Configuration
CAM_URL=rtsp://username:password@<cam_ip>:554/h264Preview_01_sub  # RTSP URL or /dev/video0 or path to video file
RTSP_FRAME_WIDTH=2304   # Width of RTSP stream (from ffprobe)
RTSP_FRAME_HEIGHT=1296  # Height of RTSP stream (from ffprobe)

# Application
APP_DIR=/usr/app/babysleepcoach  # Location of app root (primarily for Docker)
DEBUG=False
OWL=False  # Easter egg mode

# Testing
VIDEO_PATH=/usr/app/babysleepcoach/video  # For debugging with recorded footage

# Smart Home (optional)
HATCH_IP=192.168.HATCH.IP

# Server Configuration
REACT_APP_BACKEND_IP=localhost:8001   # IP of Flask server
REACT_APP_RESOURCE_SERVER_IP=localhost:8000  # IP of resource server
PORT=80  # Port web app serves assets from
FLASK_PORT=8001
RESOURCE_SERVER_PORT=8000

# Feature Flags
CORAL_TPU_ENABLED=False  # Enable Coral Edge TPU for pose detection fallback
CORAL_MODEL_PATH=  # Path to MoveNet .tflite model compiled for Edge TPU
CRYING_DETECTION_ENABLED=False
CRY_MODEL_PATH=  # Path to YAMNet .tflite model (or Edge TPU compiled variant)
CRY_CONFIDENCE_THRESHOLD=0.6

# Notifications (all optional â€” configure the channels you want)
NOTIFICATION_COOLDOWN_SECONDS=300

# Pushover ($5 one-time, iOS + Android)
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_CHAT_ID=

# Generic Webhook (Home Assistant, IFTTT, n8n, etc.)
WEBHOOK_URL=
